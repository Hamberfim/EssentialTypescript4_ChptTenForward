{
  /* bare bones tsconfig */
  "compilerOptions": {
    /* lang/env */
    "target": "es2020",

    /* Modules */
    "module": "commonjs",
    "rootDir": "./src",

    /* Emit */
    "outDir": "./dist",
    "declaration": true,

    /* Type Checking */
    "strict": true,
    "alwaysStrict": true,
    "noEmitOnError": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true
  },
  // point at the dir we are currently using
  "include": ["./src/chapt11/*.*"],
  "exclude": ["node_modules"]
}
